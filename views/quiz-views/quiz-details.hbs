<h2>{{quizItem.name}} ({{quizItem.theme}})</h2>

<p>{{quizItem.description}}</p>


<form action="/quiz/{{quizItem._id}}/process-card" method="POST">
  <div class="form-group">
    <label for="question">
      Write your question:
      <input type="text" name="question" class="form-control" id="exampleInputquestion" aria-describedby="questionHelp"
      placeholder="Enter question">
    </label>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">
      First Option:
      <input type="text" name="firstAnswer" class="form-control" id="formGroupExampleInput" placeholder="Enter answer 1">
    </label>
    <label>
      <input type="checkbox" name="firstTrue" />
    </label>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">
      Second Option:
      <input type="text" name="secondAnswer" class="form-control" id="formGroupExampleInput2" placeholder="Enter answer 2">
    </label>
        <label>
      <input type="checkbox" name="secondTrue" />
    </label>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput3">
      Third Option:
      <input type="text" name="thirdAnswer" class="form-control" id="formGroupExampleInput3" placeholder="Enter answer 3">
    </label>
    <label>
      <input type="checkbox" name="thirdTrue" />
    </label>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput4">
      Fourth Option:
      <input type="text" name="fourthAnswer" class="form-control" id="formGroupExampleInput4" placeholder="Enter anwser 4">
  </label>
      <label>
      <input type="checkbox" name="fourthTrue" />
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

