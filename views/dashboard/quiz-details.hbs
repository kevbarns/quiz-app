                <input type="text" name="secondAnswer" class="form-control" placeholder="Enter answer 2">
              </label>
              <label>
                <input type="checkbox" name="secondTrue" />
              </label>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label>
                Réponse 3
                <input type="text" name="thirdAnswer" class="form-control" placeholder="Enter answer 1">
              </label>
              <label>
                <input type="checkbox" name="firstTrue" />
              </label>

              <label for="formGroupExampleInput2">
                Réponse 4
                <input type="text" name="fourthAnswer" class="form-control" placeholder="Enter answer 2">
              </label>
              <label>
                <input type="checkbox" name="secondTrue" />
              </label>
            </div>
          </div>
      </form>
    </div>
